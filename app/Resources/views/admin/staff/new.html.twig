{% extends 'admin/layoutAdmin.html.twig' %}

{% block layout %}

    <section class="admin-new-staff">
        <div class="container-fluid container-title text-center">
            <h1>Gestion des membres du personnel</h1>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div>
                        <h2 class="text-center">Création d'un nouveau membre</h2>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <a href="{{ path('staff_index') }}">
                            <img src="/images/arrow-circle-left.svg" class = "icon"
                                 alt="retour en arrière"></a>
                        <button type="submit" class="btn btn-primary pull-right">Valider</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
