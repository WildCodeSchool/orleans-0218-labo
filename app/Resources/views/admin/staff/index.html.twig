{% extends 'admin/layout.html.twig' %}

{% block layout %}
    <section class="admin-listing-staff">
        <div class="container-fluid container-title">
            <h1>Gestion des membres du personnel</h1>
        </div>
        <div class="container">
            <div class="row">
                <table class="table">
                    <tbody>
                    <tr class="admin-listing">
                        <th class="name">Pr√©nom</th>
                        <th colspan=3 class="name">Nom</th>
                    </tr>
                    {% for staff in staff %}
                        <tr class="admin-listing">
                            <td class="name">{{ staff.firstName }}</td>
                            <td class="name">{{ staff.lastName }}</td>
                            <td class="edit">
                                <a role="button" class="btn btn-warning"
                                   href="{{ path('staff_edit', { 'id': staff.id }) }}">Modifier</a>
                            </td>
                            <td class="delete">
                                <a role="button" class="btn btn-danger"
                                   href="">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <a role="button" class="btn btn-primary" href="{{ path('staff_new') }}"><i
                                class="fas fa-camera-retro"></i>Ajouter un membre</a>
                </div>
            </div>
        </div>
        </div>
    </section>

{% endblock %}
