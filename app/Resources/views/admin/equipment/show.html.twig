{% extends 'admin/layoutAdmin.html.twig' %}

{% block layout %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2>Détails de l'équipement</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center ">
                <img class="img-responsive imgSize"
                    src="{{ asset('images/products/' ~ equipment.imageName) }}"
                     alt="{{ equipment.name }}">
            </div>
            <div class="col-md-6 text-justify">
                <h3>{{ equipment.name }}</h3>
                <p>{{ equipment.description }}</p>
            </div>
        </div>
        <div class="row container-button">
            <div class="col-md-2 col-md-offset-3 text-center ">
                <a type="button" class="btn btn-primary button-width" href="{{ path('equipment_index') }}">Retour</a>
            </div>
            <div class="col-md-2 text-center">
                <a type="button" class="btn btn-warning button-width" href="{{ path('equipment_edit', { 'id': equipment.id }) }}">Modifier</a>
            </div>
            <div class="col-md-2 text-center">
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger button-width">
                        <i class="icon-trash"></i>
                        Supprimer
                    </button>
                    {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
